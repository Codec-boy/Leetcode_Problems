class Solution {
    public double myPow(double x, int n) {
        long N = n;
        if(N<0){                               // if n is negative take reciprocal and make n positive
            x=1/x;
            N=-N;
        }
        double result = 1;
        while(N>0){
            if(N%2 == 1){                      //if n is odd
                result = result*x;             // multiply once
            }
            x = x*x;                           // Square the base
            N = N/2;                           // reduce n by half
        }
        return result;
    }
}
